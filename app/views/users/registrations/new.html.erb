          <%= f.label :"(名)" %>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
        </div>

        <div class="field form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
          <%= f.label :"(セイ)" %>
          <%= f.text_field :surname_kana %>
          <%= f.label :"(メイ)" %>
          <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "surname" %>
        </div>

        <div class="field form-group col-xs-12">
