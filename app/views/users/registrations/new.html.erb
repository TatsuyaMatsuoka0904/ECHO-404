          <%= f.label :"住所", class: "col-sm-2 control-label" %>
          <%= f.text_field :address %>
        </div>
        <div class="field form-group col-xs-12">
          <%= f.label :"電話番号", class: "col-sm-2 control-label" %>
          <%= f.text_field :phone_number %>
